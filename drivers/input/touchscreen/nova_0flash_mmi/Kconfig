#
# Novatek NT36xxx touchscreen driver configuration
#
menuconfig TOUCHSCREEN_NT36xxx_HOSTDL_SPI_MMI
	tristate "Moto Novatek NT36xxx host download SPI driver"
	default n
	help
	  Say Y here if you have a Moto Novatek NT36xxx no flash touchscreen
	  connected to your system by SPI bus.

	  If unsure, say N.

if TOUCHSCREEN_NT36xxx_HOSTDL_SPI_MMI

config INPUT_NOVA_0FLASH_MMI_ENABLE_WAKEUP_GESTURE
	bool "Moto Novatek NT36xxx wakeup gestures"
	default n
	help
	  Say Y here if you want to have wakeup gesture support on Moto Novatek
	  NT36xxx.

	  If unsure, say N.

config INPUT_NOVA_0FLASH_MMI_ENABLE_SENSORS_CLASS
	bool "Moto Novatek NT36xxx sensors class"
	depends on SENSORS_CLASS && INPUT_NOVA_0FLASH_MMI_ENABLE_WAKEUP_GESTURE
	default n
	help
	  Say Y here if you want to have sensors class support on Moto Novatek
	  NT36xxx.

	  If unsure, say N.

